<div class="container">

  <%= simple_form_for @flat do |f| %>
    <%= f.input :name, label: 'Your name please', error: 'Name is mandatory, please specify one'%>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>

  <%= link_to "Back to index", flats_path %>
</div>
